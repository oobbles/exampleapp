<p id="notice"><%= notice %></p>

<h1>Listing Friends Lists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends_lists.each do |friends_list| %>
      <tr>
        <td><%= friends_list.name %></td>
        <td><%= friends_list.age %></td>
        <td><%= link_to 'Show', friends_list, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_friends_list_path(friends_list), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', friends_list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_friends_list_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Frand
<% end %>
